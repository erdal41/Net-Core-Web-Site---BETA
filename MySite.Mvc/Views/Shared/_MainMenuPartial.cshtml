@using Microsoft.Extensions.Options
@using MySite.Entities.Concrete
@inject IOptionsSnapshot<WebsiteInfo> WebsiteInfo
@{
    var webSiteInfo = WebsiteInfo.Value;
}

<header id="header" class="header-effect-shrink" data-plugin-options="{'stickyEnabled': true, 'stickyEffect': 'shrink', 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyChangeLogo': true, 'stickyStartAt': 120, 'stickyHeaderContainerHeight': 85}">
    <div class="header-body border-top-0">
        <div class="header-top header-top-default header-top-borders border-bottom-0 bg-color-light">
            <div class="container">
                <div class="header-row">
                    <div class="header-column justify-content-between">
                        <div class="header-row">
                            <nav class="header-nav-top w-100 w-md-50pct w-xl-100pct">
                                <ul class="nav nav-pills d-inline-flex custom-header-top-nav-background pr-5">
                                    <li class="nav-item py-2 d-inline-flex z-index-1">
                                        <span class="d-flex align-items-center p-0">
                                            <span>
                                                <img width="25" src="~/site/img/icons/phone.svg" alt="Telefon Icon" data-icon data-plugin-options="{'onlySVG': true, 'extraClass': 'svg-fill-color-light'}" />
                                            </span>
                                            <a class="text-color-light text-decoration-none font-weight-semibold text-3-5 ml-2" href="tel:1234567890" data-cursor-effect-hover="plus" data-cursor-effect-hover-color="light">(0216) 394-8086</a>
                                        </span>
                                        <span class="font-weight-normal align-items-center px-0 d-none d-xl-flex ml-3">
                                            <span>
                                                <img width="25" src="~/site/img/icons/email.svg" alt="Email Icon" data-icon data-plugin-options="{'onlySVG': true, 'extraClass': 'svg-fill-color-light'}" />
                                            </span>
                                            <a class="text-color-light text-decoration-none font-weight-semibold text-3-5 ml-2" href="mailto:info@cayirovapen.com" data-cursor-effect-hover="plus" data-cursor-effect-hover-color="light">info@cayirovapen.com</a>
                                        </span>
                                    </li>
                                </ul>
                            </nav>
                            <div class="d-flex align-items-center w-100">
                                <ul class="pl-0 ml-auto mb-0">
                                    <li class="nav-item font-weight-semibold text-1 text-lg-2 text-color-dark d-none d-md-flex justify-content-end mr-3">
                                        Pazartesi - Cumartesi 9:00 - 18:00 / Pazar - Kapalı
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-container container" style="height: 117px;">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/site/img/theme/logo.png" alt="Rafgrup" width="291" height="44">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="header-column justify-content-end w-100">
                    <div class="header-row">
                        <div class="header-nav header-nav-links order-2 order-lg-1">
                            <div class="header-nav-main header-nav-main-square header-nav-main-text-capitalize header-nav-main-effect-1 header-nav-main-sub-effect-1">
                                <nav class="collapse">
                                    <ul class="nav nav-pills" id="mainNav">
                                        <li>
                                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                                @webSiteInfo.MenuTitle
                                            </a>
                                        </li>
                                        <li>
                                            <a class="nav-link" asp-controller="Hakkimizda" asp-action="Index">
                                                Hakkımızda
                                            </a>
                                        </li>
                                        <li class="dropdown">
                                            <a class="nav-link" href="javascript:();">
                                                Ürünler
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="CamBalkon" class="dropdown-item">Cam Balkon</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="Sineklik" class="dropdown-item">Sineklik</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="StorSineklik" class="dropdown-item">Stor Sineklik</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="PvcDograma" class="dropdown-item">Pvc Doğrama</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="Kupeste" class="dropdown-item">Küpeşte</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Urunler" asp-action="Dusakabin" class="dropdown-item">Duşakabin</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="dropdown">
                                            <a class="nav-link" href="javascript:();">
                                                Hizmetlerimiz
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a asp-controller="Hizmetler" asp-action="OzelProjeTasarim" class="dropdown-item">Özel Proje ve Tasarım</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Hizmetler" asp-action="MontajDeMontaj" class="dropdown-item">Montaj - De Montaj</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Hizmetler" asp-action="TadilatTamirat" class="dropdown-item">Tadilat - Tamirat</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="nav-link" asp-controller="Referanslar" asp-action="Index">
                                                Referanslar
                                            </a>
                                        </li>
                                        <li class="d-lg-none">
                                            <a class="nav-link" asp-controller="Iletisim" asp-action="Index">İletişim</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-column header-column-search justify-content-end align-items-center d-flex w-auto flex-row">
                    <a asp-controller="Iletisim" asp-action="Index" class="btn btn-dark custom-btn-style-1 font-weight-semibold text-3-5 btn-px-3 py-2 ws-nowrap ml-4 d-none d-lg-block" data-cursor-effect-hover="plus" data-cursor-effect-hover-color="light"><span>İletişim</span></a>
                    <div class="header-nav-features header-nav-features-no-border">
                    </div>
                    <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
