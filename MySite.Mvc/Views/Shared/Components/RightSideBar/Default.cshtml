@using MySite.Mvc.Helpers.Concrete
@model MySite.Mvc.Models.RightSideBarViewModel

<div class="blog-sidebar col-lg-4 pt-4 pt-lg-0 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="1800">
    <aside class="sidebar">
        <div class="px-3 mt-4">
            <form asp-controller="Makale" asp-action="Ara" method="get">
                <div class="input-group mb-3 pb-1">
                    <input class="form-control box-shadow-none text-1 border-0 bg-color-grey" placeholder="Aramak istediğiniz anahtar kelime..." name="keyword" id="keyword" type="text">
                    <span class="input-group-append">
                        <button type="submit" class="btn bg-color-grey text-1 p-2"><i class="fas fa-search m-2"></i></button>
                    </span>
                </div>
            </form>
        </div>
        <div class="py-1 clearfix">
            <hr class="my-2">
        </div>
        <div class="px-3 mt-4">
            <h3 class="text-color-quaternary text-capitalize font-weight-bold text-5 m-0 mb-3">En Çok Okunan Makaleler</h3>
            <div class="pb-2 mb-1">
                @for (int i = 0; i < Model.Articles.Count; i++)
                {
    <a href="/@Url.FriendlyURLTitle(Model.Articles[i].Title)-@Model.Articles[i].Id" class="text-color-default text-uppercase text-1 mb-0 d-block text-decoration-none">@Model.Articles[i].ModifiedDate.ToShortDateString() <span class="opacity-3 d-inline-block px-2">|</span> @Model.Articles[i].CommentCount <span class="opacity-3 d-inline-block px-2">|</span> @Model.Articles[i].ModifiedByName</a>
                    <a href="/@Url.FriendlyURLTitle(Model.Articles[i].Title)-@Model.Articles[i].Id" class="text-color-dark text-hover-primary font-weight-bold text-3 d-block pb-3 line-height-4">
                        <img src="~/admin/assets/img/@Model.Articles[i].Picture" alt="Alternate Text" class="img-circle" width="60" height="50" />
                        @Model.Articles[i].Title
                    </a><hr />}

            </div>
        </div>
        <div class="py-1 clearfix">
            <hr class="my-2">
        </div>
        <div class="px-3 mt-4">
            <h3 class="text-color-quaternary text-capitalize font-weight-bold text-5 m-0">Kategoriler</h3>
            <ul class="nav nav-list flex-column mt-2 mb-0 p-relative right-9">
                @foreach (var category in Model.Categories)
                {
                <li class="nav-item"><a class="nav-link bg-transparent border-0" asp-controller="Blog" asp-action="Index" asp-route-categoryTitle="@Url.FriendlyURLTitle(category.Name)">@category.Name</a></li>
                @*<li class="nav-item"><a class="nav-link bg-transparent border-0" href="/kategori/@Url.FriendlyURLTitle(category.Name)">@category.Name</a></li>*@
                }
            </ul>
        </div>

