                                    </g>
                                </svg><!--end::Svg Icon-->
                            </span>Yenile
                        </button>
                        <!--end::Button-->
                    </div>
                </div>
                <div class="card-body">
                    <div class="mt-10 mb-5 collapse" id="kt_datatable_group_action_form">
                        <div class="d-flex align-items-center">
                            <div class="font-weight-bold text-danger mr-3">
                                <span id="kt_datatable_selected_records">1</span> kayıt seçildi.
                            </div>
                            <div class="dropdown mr-2">
                                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">Durum</button>
                                <div class="dropdown-menu dropdown-menu-sm">
                                    <ul class="nav nav-hover flex-column">
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <span class="nav-text">Pending</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <span class="nav-text">Delivered</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <span class="nav-text">Canceled</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-danger mr-2" type="button" id="btnTopluSil">Seçili Kayıtları Sil</button>
                        </div>
                    </div>
                    <div id="modalPlaceHolder" aria-hidden="true"></div>
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="commentsTable" style="margin-top: 13px !important;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Makale</th>
                                <th>Yorum İçeriği</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>Yazar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Makale</th>
                                <th>Yorum İçeriği</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>Yazar</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var comment in commentList)
                            {
                                <tr name="@comment.Id">
                                    <td>@comment.Id</td>
                                    <td>@comment.Article.Title</td>
                                    <td>@(comment.Text.Length>75 ? comment.Text.Substring(0, 75):comment.Text)</td>
                                    <td>@(comment.IsActive ? "Onaylandı" : "Onay Bekliyor")</td>
                                    <td>@comment.ModifiedDate.ToShortDateString()</td>
                                    <td>@comment.ModifiedByName</td>
                                    <td>
                                        @if (!comment.IsActive)
                                        {
