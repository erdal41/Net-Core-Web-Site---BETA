                                            <path d="M14,4.5 L14,3.5 C14,3.22385763 13.7761424,3 13.5,3 L10.5,3 C10.2238576,3 10,3.22385763 10,3.5 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#000000" opacity="0.3" />
                                        </g>
                                    </svg><!--end::Svg Icon-->
                                </span>Seçili Kayıtları Sil</button>
                        </div>
                    </div>
                    @if (Model.ResultStatus == ResultStatus.Success)
                    {
                        <div id="modalPlaceHolder" aria-hidden="true"></div>
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="usersTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Resim</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>E-Posta Adresi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Resim</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>E-Posta Adresi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr name="@user.Id">
                                        <td>@user.Id</td>
                                        <td>
                                            <div class="symbol symbol-circle symbol-lg-60">
                                                <img src="~/admin/assets/img/@user.Picture" alt="@user.UserName"/>
                                            </div>
                                        </td>
                                        <td>@user.UserName</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <button id="btnDetay" class="btn btn-sm btn-clean btn-icon mr-2" title="Yorum Detayı" data-id="@user.Id">
                                                <span class="svg-icon svg-icon-md">
                                                    <!--begin::Svg Icon | path:/var/www/preview.keenthemes.com/metronic/releases/2021-03-11-144509/theme/html/demo1/dist/../src/media/svg/icons/Communication/Chat6.svg-->
